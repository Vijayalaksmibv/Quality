<mvc:View controllerName="qualityportal.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Page id="resultPage" title="Result Recording" showNavButton="true" navButtonPress="onNavBack">
        <content>
            <ObjectHeader
                title="{inspectionModel>InspectionLot}"
                number="{inspectionModel>LotQuantity}"
                numberUnit="PC"
                intro="{inspectionModel>MaterialNumber}">
                <statuses>
                    <ObjectStatus text="{inspectionModel>UsageDecisionCode}" state="{path: 'inspectionModel>UsageDecisionCode', formatter: '.formatter.statusState'}"/>
                </statuses>
                <attributes>
                    <ObjectAttribute title="Plant" text="{inspectionModel>Plant}"/>
                </attributes>
            </ObjectHeader>
            
            <form:SimpleForm editable="true" layout="ResponsiveGridLayout" title="Stock Posting">
                <form:content>
                    <Label text="Unrestricted Stock"/>
                    <Input value="{path: 'inspectionModel>UnrestrictedStock', type: 'sap.ui.model.type.Integer'}" 
                           editable="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
                    
                    <Label text="Blocked Stock"/>
                    <Input value="{path: 'inspectionModel>BlockedStock', type: 'sap.ui.model.type.Integer'}" 
                           editable="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
                    
                    <Label text="Production Stock"/>
                    <Input value="{path: 'inspectionModel>ProductionStock', type: 'sap.ui.model.type.Integer'}" 
                           editable="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
                </form:content>
            </form:SimpleForm>
        </content>
        
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button text="Save" type="Default" press="onSave" 
                        visible="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
                <Button text="Approve" type="Accept" press="onApprove" 
                        visible="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
                <Button text="Reject" type="Reject" press="onReject" 
                        visible="{= ${inspectionModel>UsageDecisionCode} === 'PENDING' }"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
